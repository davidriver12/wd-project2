<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Craft's Toolkit</title>
    <link rel="shortcut icon" type="image/jpg" href="./public/images/roller.png"/>
    <link rel="stylesheet" href="/css/index.css">
    <script src="/js/index.js" defer></script>
    <!--FONT AWESOME ICONS-->
    <script src="https://kit.fontawesome.com/44de1043d0.js" crossorigin="anonymous"></script>
</head>
<body>

    <div class="navbar">
        <h2 class="navbar-Title"><b>The Crafts Toolkit</b></h2>
        <button>Home</button>
        <button>Features</button>
        <button class="aboutBtn">About Us</button>
        <button class="newPostBtn"><i class="fa-solid fa-plus"></i>   New Post</button>
    </div>

    <div class="post-board">
        <% posts.forEach(function(post) {
        if (post != 0){ %>
            <div class="postCard">
                    <div class="interactionSection">
                        <h2><b><%= post.title %></b> </h2>
                        <p>Author: <%= post.author %></p>
                        <p>Post ID: <%= post.id %></p>
                        <button id=<%= post.id %> class="continueBtn">Continue reading...</button>
                        <button id=<%= post.id %> class="deleteBtn">Delete post</button>
                    </div>
                <div class="summaryDiv">
                    <h3>Summary: </h3>
                    <p><%= post.summary %></p>
                </div>
                <img class="imagePosts" src= <%= post.img %> alt="">
            </div>
        <% }}) %>
    </div>

    <div class="blackDiv hidden"></div>
    <div class="newPostForm hidden">
        <form action="/" method="post">
            <div>
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" size="50">
            </div>
            <div>
                <label for="author">Author:</label>
                <input type="text" id="author" name="author" size="50">
            </div>
            <div>
                <label for="summary">Summary:</label>
                <textarea name="summary" id="summary" cols="100" rows="5"></textarea>
            </div>
            <div>
                <label for="content">Content:</label>
                <textarea name="content" id="content" cols="100" rows="10"></textarea>
            </div>
            <div>
                <label for="img">Image Link:</label>
                <input type="text" id="img" name="img" size="50">
            </div>
            <input class="sendBtn" type="submit">
        </form>
        <button class="cancelBtn">Cancel</button>
    </div>
</body>
</html>